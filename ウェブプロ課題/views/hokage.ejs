<!Doctype html>
<html lang="ja">
<head>
  <meta charset="utf-8">
  <title>歴代火影</title>
  <link rel="stylesheet" href="/public/style.css">
</head>
<body>
  <header>
    <h1>歴代火影</h1>
    <nav>
      <a href="/">トップ</a>
      <a href="/hokage/create">追加</a>
    </nav>
  </header>

  <main>
    <table>
      <tr><th>ID</th><th>名称</th><th>Roman</th><th>メモ</th><th>操作</th></tr>
      <% let number = 0 %>
      <% for( let row of data ) { %>
        <tr>
          <td><%= row.id %></td>
          <td><a href="/hokage/<%= number %>"><%= row.name %></a></td>
          <td><%= row.roman %></td>
          <td><%= row.note %></td>
          <td>
            <a href="/hokage/edit/<%= number %>">編集</a>
            <a class="danger" href="/hokage/delete/<%= number %>" onclick="return confirm('削除しますか？');">削除</a>
          </td>
        </tr>
        <% number += 1 %>
      <% } %>
    </table>
  </main>
</body>
</html>
